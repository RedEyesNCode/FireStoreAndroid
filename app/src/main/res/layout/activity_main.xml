<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:textSize="15dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="@string/firebase_firestore_database"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_width="match_parent"
        android:id="@+id/edtName"
        android:hint="name"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_width="match_parent"
        android:id="@+id/edtEmail"
        android:hint="email"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_width="match_parent"
        android:id="@+id/edtPassword"
        android:hint="password"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:text="SAVE DATA TO FIRESTORE."
        android:id="@+id/btnSaveFirestore"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_width="match_parent"
        android:id="@+id/edtCustomIdFirebase"
        android:hint="Custom Document Id for Firebase"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:text="SAVE DATA TO FIRESTORE. [CUSTOM ID]"
        android:id="@+id/btnSaveFireStoreCustomId"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_width="match_parent"
        android:text="GET FIRESTORE DATA."

        android:id="@+id/btnGetFirestoreDATA"
        android:layout_height="wrap_content"/>
</LinearLayout>